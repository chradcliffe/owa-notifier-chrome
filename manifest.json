{
    "name": "owa-notifier-chrome",
    "version": "0.1",
    "manifest_version": 2,
    "description": "OWA notifier for Chrome",
    "options_page": "options.html",

    "background": {
        "page": "background.html",
        "persistent": false
    },
    "permissions": [
        "notifications",
        "https://*/",
        "alarms",
        "tabs"
    ]
}
